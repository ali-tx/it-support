<div class="container col-sm-12" align="center">

<h2>Log in</h2>
<div class="center"><%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field"><br/>
      <%= f.label :email, style:'margin-left:-20%' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,style:'width: 300px; border: 2px solid #ccc; border-radius: 2px;  background-color: #f8f8f8;
      padding: 12px 20px' %>
    </div>
    <div class="field">
      <%= f.label :password, style:'margin-left:-18%' %><br />
      <%= f.password_field :password, autocomplete: "current-password",style:'width: 300px; border: 2px solid #ccc; border-radius: 2px;  background-color: #f8f8f8;
      padding: 12px 20px'  %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field" >
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:'btn btn-success' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
</div>